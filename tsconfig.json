{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "downlevelIteration": true,
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "skipDefaultLibCheck": true,
    "types": [
      "node",
      "custom"
    ],
    "typeRoots": [
      "node_modules/@types/",
      "./typings",
    ],
    "outDir": "./build"
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "src/client/worker/**/*",
    "src/client/builder/**/*",
    "tests/**/*"
  ]
}
