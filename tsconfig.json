{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "downlevelIteration": true,
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "./build"
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/client/worker/**/*",
    "src/client/builder/**/*"
  ]
}
