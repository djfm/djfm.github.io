{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "downlevelIteration": true,
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "types": ["react", "node"],
    "lib": ["ESNext", "DOM"],
    "skipDefaultLibCheck": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/client/worker/**/*"
  ]
}
