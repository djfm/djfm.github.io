{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "downlevelIteration": true,
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "skipDefaultLibCheck": true,
    "types": [
      "node",
      "jest",
      "markdown"
    ],
    "typeRoots": [
      "node_modules/@types/",
      "./typings",
    ],
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/client/worker/**/*",
    "src/client/builder/**/*",
    "tests/**/*"
  ]
}
